<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Item</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <section>
        <h1><h1>This is the Edit Page!</h1></h1>
        <section>
            <ul>
                <% itemList.forEach(item => { %>
                    <% if (item._id==idItem) { %>
                        <li>
                            <form action="/edit/update/<%= item._id %>" method="POST">
                                <label for="titleinput">Input Title</label>
                                <input type="text" value="<%= item.titleinput %>" name="titleinput">
                                <br>
                                <label for="textinput">Input Text</label>
                                <input type="text" value="<%= item.textinput %>" name="textinput">
                                <br>
                                <label for="linkinput">Input Link</label>
                                <input type="text" value="<%= item.linkinput %>" name="linkinput">
                                <br>
                                <label for="numinput">Input Number</label>
                                <input type="number" value="<%= item.numinput %>" name="numinput">
                                <br>
                                <label for="region-select">Select a subregion:</label>
                                <select name="regioninput" id="region-select">
                                    <option value="">--Please choose an option--</option>
                                    <option value="north america">North America</option>
                                    <option value="central america">Central America</option>
                                    <option value="caribbean">Caribbean</option>
                                    <option value="south america">South America</option>
                                </select>
                                <button type="submit" class="confirm">Confirm</button>
                                <a href="/" class="cancel">Cancel</a>
                            </form>
                        </li>
                        <% } else { %>
                            <li>
                                <div>
                                    <%= item.titleinput %>
                                </div>
                                <div>
                                    <%= item.textinput %>
                                </div>
                                <div>
                                    <%= item.linkinput %>
                                </div>
                                <div>
                                    <%= item.numinput %>
                                </div>
                                <a href="/edit/<%= item._id %>">Edit</a>
                                <a href="/edit/remove/<%= item._id %>" class="remove">Cancel</a>
                            </li>
                            <% } %>
                                <% }) %>
            </ul>
        </section>
    </section>
</body>
</html>